{
  "name": "semreg-playground",
  "author": "Luca Brognara",
  "description": "A monorepo for a web app that allows you to test semreg expressions",
  "version": "1.0.0",
  "keywords": [
    "semreg",
    "regex",
    "testing",
    "semreg testing tool"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucabro81/semreg-playground"
  },
  "private": false,
  "scripts": {
    "build:prepare-serve": "rm -rf apps/web/semreg-playground && mv apps/web/out apps/web/semreg-playground",
    "build:pre-release": "DEPLOY_TARGET=\"gh-pages\" NEXT_PUBLIC_BASE_PATH=\"/semreg-playground\" pnpm --filter web build && pnpm build:prepare-serve",
    "build": "turbo build",
    "start": "npx serve@latest apps/web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
